    android:gravity="center_horizontal" >
    
    <ImageView
        android:id="@+id/icon_image" 
        android:layout_width="60dp" 
        android:layout_height="60dp"
        android:padding="3dp" >
    </ImageView>
    <!-- width und height groeÃŸe des Icons -->
    <TextView
